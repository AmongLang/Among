use format

format(hi)

( "x:{}, y:{}" % [1, 2] )  // x:1, y:2
( "x:{0}, y:{1}, xy:{0}{1}" % [1, 2] )  // x:1, y:2, xy:12
( "x:{x}, y:{y}" % {x:1, y:2} )  // x:1, y:2

format( "x:{}, y:{}", [1, 2] )
format( "x:{0}, y:{1}, xy:{0}{1}", [1, 2] )
format( "x:{x}, y:{y}", {x:1, y:2} )

( ( "{{}}{{}}" ) % sus )

( "{} {} {}" % a )
( "{0} {} {0} {}" % a )

( "{\\}}" % {\}: 1} )